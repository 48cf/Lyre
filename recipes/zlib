name=zlib
from_source=zlib
revision=1
hostdeps="gcc pkg-config"
deps="core-libs"

configure() {
        prefix="${prefix}" \
        CHOST="x86_64-lyre" \
    ${source_dir}/configure
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
    # Remove static libraries
    rm -rf "${dest_dir}${prefix}"/lib/*.a
}
