name=grep
from_source=grep
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc pcre"

configure() {
    ${source_dir}/configure \
        --host=x86_64-lyre \
        --prefix=${prefix} \
        --disable-nls
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
