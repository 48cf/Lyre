name=xorg-font-util
from_source=xorg-font-util
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc"

configure() {
    ${source_dir}/configure           \
        --host=x86_64-lyre           \
        --prefix=${prefix}            \
        --sysconfdir=/etc             \
        --localstatedir=/var
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
