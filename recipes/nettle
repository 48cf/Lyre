name=nettle
from_source=nettle
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs gmp"
imagedeps="gcc"

configure() {
    ${source_dir}/configure           \
        --host=x86_64-lyre           \
        --prefix=${prefix}            \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-documentation       \
        --disable-static
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
}
