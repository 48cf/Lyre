name=bash
from_source=bash
revision=1
imagedeps="gcc"
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc ncurses readline"

configure() {
    ${source_dir}/configure    \
        --host=x86_64-lyre    \
        --prefix=${prefix}     \
        --without-bash-malloc  \
        --disable-nls
}

build() {
    make -j${parallelism}
}

install() {
    make install-strip DESTDIR="${dest_dir}"
    ln -s bash "${dest_dir}${prefix}"/bin/sh
}
