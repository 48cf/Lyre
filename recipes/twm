name=twm
revision=1
from_source=twm
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs xorg-server xsetroot"

configure() {
    ${source_dir}/configure \
        --host=${OS_TRIPLET} \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var
}

build() {
    make -j${parallelism}
}

install() {
    make DESTDIR=${dest_dir} install-strip
}
