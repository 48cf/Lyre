name=readline
from_source=readline
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc ncurses"

configure() {
    ${source_dir}/configure    \
        --host=x86_64-lyre    \
        --prefix=${prefix}     \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static       \
        --enable-multibyte
}

build() {
    make -j${parallelism}
}

install() {
    make install DESTDIR="${dest_dir}"
}
