name=fontconfig
from_source=fontconfig
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc freetype libxml libiconv"
imagedeps="python gperf"

configure() {
    ${source_dir}/configure \
        --host=x86_64-lyre \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --disable-docs \
        --enable-libxml2
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
