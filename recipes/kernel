name=kernel
from_source=kernel
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"

build() {
    ${source_dir}/configure \
        TOOLCHAIN=${OS_TRIPLET} \
        --prefix=${prefix}

    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
