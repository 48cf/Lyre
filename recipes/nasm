name=nasm
from_source=nasm
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="mlibc"

configure() {
    cp -r "${source_dir}"/. .
    libtoolize -cfvi && autoreconf -fvi -I$(realpath ./autoconf)

    ./configure \
        --host=x86_64-lyre \
        --prefix=${prefix}
}

build() {
    make
}

install() {
    make strip
    DESTDIR="${dest_dir}" make install
}
