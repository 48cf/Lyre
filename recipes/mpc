name=mpc
from_source=mpc
revision=1
imagedeps="gcc"
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc gmp mpfr"

configure() {
    ${source_dir}/configure           \
        --host=x86_64-lyre           \
        --prefix=${prefix}            \
        --disable-static
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
