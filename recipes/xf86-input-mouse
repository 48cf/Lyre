name=xf86-input-mouse
revision=1
from_source=xf86-input-mouse
hostdeps="gcc autoconf automake libtool pkg-config xorg-macros"
deps="mlibc xorg-server"

configure() {
    SYSROOT=${sysroot_dir} ${source_dir}/configure --prefix=${prefix} --host=x86_64-lyre --disable-static
}

build() {
    make -j${parallelism}
}

install() {
    make DESTDIR=${dest_dir} install
}
